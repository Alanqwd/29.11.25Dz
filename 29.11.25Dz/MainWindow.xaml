<Window x:Class="_29._11._25Dz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_29._11._25Dz"
        mc:Ignorable="d"
        Title="Задание-1" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Name="btnRaceCondition" Content="Запустить гонку данных" Margin="0,5" Click="BtnRaceCondition_Click"/>
            <Button Name="btnLock" Content="Запустить безопасное добавление" Margin="0,5" Click="BtnLock_Click"/>
            <Button Name="btnMonitorTimeout" Content="Проверить монитор с таймаутом" Margin="0,5" Click="BtnMonitorTimeout_Click"/>
            <TextBox Name="txtOutput" Margin="0,10" Height="100" IsReadOnly="True" TextWrapping="Wrap"/>
            <Button x:Name="TwoTask" Click="btnTwoTask_Click"  Height="50">Нажмите чтобы перейти на 2 задание</Button>
        </StackPanel>

    </Grid>
</Window>
